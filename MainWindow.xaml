<Window x:Class="ark_server_utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ark_server_utility"
        mc:Ignorable="d"
        Title="ARK Server Utility" Height="716" Width="1280" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Name="Grid1">
        <Menu VerticalAlignment="Top">
            <MenuItem Header="ファイル">
                <MenuItem Header="終了" Click="exit_app"/>
                <MenuItem Header="保存" />
            </MenuItem>
            <MenuItem Header="ゲームデータ">
                <MenuItem Header="SteamCMDのインストール" Click="install_steamCMD"/>
                <MenuItem Header="SteamCMDの起動" Click="launch_steamCMD"/>
                <MenuItem Header="SteamCMDのアンインストール" Click="uninstall_steamCMD"/>
                <Separator />
                <MenuItem Header="ARKサーバーのインストール" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
